<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="Settings">
        <CheckBoxPreference
            android:key="pref_hide_deck"
            android:title="Hide Ironman Deck"
            android:summary="Hides the upcoming character so it's a surprise."/>
        <Preference
            android:key="pref_clear"
            android:title="Clear all pools"
            android:summary="This will remove all user-created pools."/>
    </PreferenceCategory>

    <PreferenceCategory android:title="Legal">
        <Preference
                android:key="pref_glide"
                android:title="Glide Library"/>
        <Preference
                android:key="pref_legal"
                android:title="Legal Disclaimer"/>
        <Preference
            android:key="pref_privacy_policy"
            android:title="Privacy Policy"/>
    </PreferenceCategory>

    <PreferenceCategory android:title="About">
        <Preference
            android:key="pref_version"
            android:title="Version "/>
        <Preference
            android:key="pref_github"
            android:title="View Source Code"/>
    </PreferenceCategory>
</PreferenceScreen>