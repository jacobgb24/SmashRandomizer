<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:background="@android:color/transparent"
    android:id="@+id/card_pool"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="8dp"
        android:animateLayoutChanges="true"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/text_list_pool_name"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:fontFamily="@font/css_font_light"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_list_pool_size"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/css_font_light"
                android:textSize="12sp"/>
        </RelativeLayout>

        <com.jacobgb24.smashrandomizer.controller.WrappingGridView
            android:id="@+id/grid_pool_chars"
            android:paddingTop="8dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:columnWidth="42dp"
            android:numColumns="auto_fit"
            android:gravity="center"/>
    </LinearLayout>

</android.support.v7.widget.CardView>

