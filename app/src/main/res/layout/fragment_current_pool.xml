<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".view.CurrentPoolFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:paddingTop="8dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/css_font"
            android:textSize="18sp"
            android:paddingBottom="8dp"
            android:text="Current Pool:"/>
        <GridView
            android:id="@+id/grid_pool"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:columnWidth="42dp"
            android:numColumns="auto_fit"
            android:gravity="center"/>
    </LinearLayout>



    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

        <ImageButton
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:tooltipText="@string/edit_pool"
                android:contentDescription="@string/edit_pool"
                android:background="@drawable/butt_pool_selector"
                android:layout_alignParentEnd="true"
                tools:ignore="UnusedAttribute"
                android:id="@+id/button_change_pool"/>
    </RelativeLayout>


    <!--<Button-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="72dp"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:id="@+id/button_change_pool"-->
        <!--android:text="Change Pool"/>-->


</RelativeLayout>